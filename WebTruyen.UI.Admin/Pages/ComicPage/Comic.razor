@page "/comic"
@using WebTruyen.UI.Admin.Components;


<div class="container-xl mt-2">
    <div class="content rounded-3 p-1 overflow-auto">
        <a href="comic/create" class="btn btn-info text-decoration-none text-dark"><i class="far fa-plus"></i>Thêm Truyện</a>
        <Button OnClick='() => {table.ExportData("csv", "table", true, null);}'>Export to CSV</Button>
        <Button OnClick='() => {table.ExportData("html", "table", true, null);}'>Export to HTML</Button>
        <Button OnClick='() => {table.ExportData("json", "table", true, null);}'>Export to JSON</Button>
        <Button OnClick='() => {table.ExportData("xlsx", "table", true, null);}'>Export to XLSX</Button>
        <Button OnClick='() => {table.ExportData("xml", "table", true, null);}'>Export to XML</Button>
        @if (_comics == null) {
            <Loading></Loading>
        } else {
            <Table @ref="table" class="table rounded-3 overflow-hidden mt-3" ColumnReorder="true" ColumnResize="true" Filtering="true" SortMode="TableSortMode.One" Paging="true">
                <table>
                    <thead>
                        <tr>
                            <th>Hình Ảnh</th>
                            <th style="min-width: 10rem;">Tên</th>
                            <th>Tên Khác</th>
                            <th>Tác Giả</th>
                            <th>Tình Trạng</th>
                            <th>Lượt Xem</th>
                            <th style="min-width: 10rem;">Mô Tả</th>
                            <th style="min-width: 120px;">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comic in _comics) {
                                <tr>
                                    <td><img src="@comic.Thumbnail" alt="@comic.NameAlias" height="64" /></td>
                                    <td>@comic.Name</td>
                                    <td>@comic.AnotherNameOfComic</td>
                                    <td>@comic.Author</td>
                                    <td>@comic.Status</td>
                                    <td>@comic.Views</td>
                                    <td>@comic.Description</td>
                                    <td>
                                        <a href="comic/detail?name=@comic.NameAlias" class="btn btn-info text-decoration-none text-dark"><i class="far fa-info-circle"></i> Chi Tiết</a>
                                    </td>
                                </tr>
                            }
                        
                    </tbody>
                </table>
            </Table>

        }

    </div>
</div>